{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "eqeqeq": ["error", "always"],
    "prefer-const": "error",
    "node/no-unsupported-features/es-syntax": [
      "error",
      { "version": ">=16.0.0" }
    ],
    "node/no-missing-require": "error",
    "node/no-unpublished-require": "off"
  },
  "plugins": ["node"]
}
