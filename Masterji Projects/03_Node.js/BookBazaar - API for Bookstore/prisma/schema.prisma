generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user") // "user" or "admin"
  createdAt DateTime @default(now())

  reviews Review[]
  orders  Order[]
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  description String?
  price       Decimal
  genre       String?
  stock       Int      @default(0)
  createdAt   DateTime @default(now())

  reviews Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String?
  userId    Int
  bookId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId]) // one review per user per book
}

model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  items       Json // [{bookId, quantity, price}]
  totalAmount Decimal
  status      String   @default("pending") // "pending", "delivered"
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

